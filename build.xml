<project name="echo" default="compile">

	<target name="compile">
		<javac srcdir="src" destdir="bin" debug="true"/>
		<manifest file="bin/META-INF/MANIFEST.MF">
			<attribute name="Main-Class" value="be.echo.clock.Clock"/>
		</manifest>
		<jar destfile="clock.jar" basedir="bin" manifest="bin/META-INF/MANIFEST.MF"/>
	</target>

</project>
